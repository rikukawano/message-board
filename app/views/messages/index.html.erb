<div class="panel panel-default">
  <div class="panel-heading">
    Message List
  </div>
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>


<%= form_for(@message) do |f| %>
<% if @message.errors.present? %>
  <div class="alert alert-danger">
    <%= alert %>
    <ul>
      <% @message.errors.full_messages.each do |full_message| %>
      <li>
        <%= full_message %>
      </li>
      <% end %>
    </ul>
  </div>
<% end %>
 <div class="form-group">
    <label for="message_name" class="col-sm-2 control-label">Name:</label>
    <%= f.text_field :name, class: "form-control" %>
    <label for="message_body" class="col-sm-2 control-label">Message:</label>
    <%= f.text_area :body, class: "form-control" %>       
    <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>