<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
        <li>
          <%= full_message %>
        </li>
        <% end %>
      </ul>
    </div>
  <% end %>
 <div class="form-group">
    <label for="message_name" class="col-sm-2 control-label">Name:</label>
    <%= f.text_field :name, class: "form-control" %>
    <label for="message_body" class="col-sm-2 control-label">Message:</label>
    <%= f.text_area :body, class: "form-control" %>       
    <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>